<% if logged_in? %>
  <p>ログイン完了: <%= current_user.name %></p>
<% else %>
<% end %>

<h1>Task一覧</h1>

<% if logged_in? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <% if logged_in? %>
            <td><%= link_to task.id, task %></td>
          <% else %>
            <td><%= task.id %></td>
          <% end %>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<% if logged_in? %>
<%= link_to '新規taskの投稿', new_task_path, class: "btn btn-primary" %>
<% end %>